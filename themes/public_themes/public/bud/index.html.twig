{% extends _layout %}
{% block content %}
    <header id="home" class="ct-u-colorWhite text-left">
      {% if sliders != null %}
      <div data-adaptiveHeight="true" data-animations="true" data-autoplay="true" data-infinite="true" data-autoplaySpeed="3000"
        data-draggable="true" data-touchMove="false" data-arrows="true" data-items="1" class="ct-slick ct-js-slick">
        {% for slider in sliders %}
        <div data-bg="{{ asset('img/slides/',true)}}{{slider.img}}" class="item">
          <div class="ct-slick-inner">
            <div class="ct-slick-content">
              <div class="container">
                <div class="row">
                  <div class="col-md-7"></div>
                  <div class="col-md-5">
                    <div class="col-md-7">
                      <h1 class=" ct-u-marginBottom60 ct-fw-300">
                        <h1 class=" ct-u-marginBottom40 ct-fw-300">
                          <span class="ct-u-text-big text-uppercase">.</span>
                          .
                        </h1>
                        <p class="ct-u-marginBottom20">.</p>
                        {% if loop.index == 1 %}
                        <p class="ct-u-marginBottom20">.</p>
                        {% endif %}
                      </h1>

                      {% if loop.index > 1 %}
                      <a href="#packages" class="btn btn-lg btn-default btn-transparent text-uppercase ct-js-btnScroll">LIHAT DETIL</a>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
      {% endif %}
    </header>
    <section id="packages" class="ct-u-decoration--triangleBefore ct-u-backgroundMotive">
      <div class="container">
        <div class="ct-heading--withBorder ct-u-marginBottom70">
          <h4 class="ct-u-colorWhite text-uppercase ct-u-marginBottom10">PAKET TERPOPULER</h4>
          <p class="ct-u-colorBlueLight">Kami menyediakan berbagai pilihan paket wisata yang dapat anda pilih sesuai kebutuhan.</p>
        </div>
        <div class="row">
          {% for tour in tours %}
          <div class="col-md-6">
            <div class="ct-productBox ct-u-marginBottom40">
              <div class="ct-productBox-image">
                <div class="ct-productBox-imageContainer">
                  <a href="{{ base_url() }}tour/{{ tour.alias_parent }}/{{ tour.alias_category }}/{{ tour.alias }}">
                    <img src="{{ asset('img/tours/',true)}}{{tour.thumbnail}}" alt="Product" width="255" height="255">
                  </a>
                </div>
              </div>
              <div class="ct-productBox-Description text-center">
                <div class="ct-productBox-DescriptionInner text-center">
                  <a href="{{ base_url() }}tour/{{ tour.alias_parent }}/{{ tour.alias_category }}/{{ tour.alias }}">
                    <h5 class="text-uppercase ct-u-marginBottom20 ct-fw-700">{{ tour.name }}</h5>
                  </a>
                </div>
                <div class="ct-productBox-Meta text-center">
                  <!--
                  <div class="ct-productBox-deliveryInformation text-center">
                    <div class="ct-u-displayTableRow">
                      <div class="ct-productBox-MetaItem">
                        <span class="h5 text-uppercase">{{ tour.name_parent }}</span>
                      </div>
                    </div>
                    <div class="ct-u-displayTableRow">
                      <div class="ct-productBox-MetaItem">
                        <span class="h5 text-uppercase">{{ tour.name_category }}</span>
                      </div>
                    </div>
                  </div>
                  -->
                  <a href="{{ base_url() }}tour/{{ tour.alias_parent }}/{{ tour.alias_category }}/{{ tour.alias }}" class="btn btn-primary btn-xs text-uppercase ct-u-marginBoth10 col-md-12">LIHAT DETIL</a>
                  <a target="_blank" href="https://api.whatsapp.com/send?phone={{ getSettingValue('company_whatsapp').value }}" class="btn btn-primary btn-xs text-uppercase ct-u-marginBoth10 col-md-12">BOOKING</a>
                  <div class="clearfix"></div>
                </div>
              </div>
            </div>
          </div>
          {% endfor %}
          <div class="col-md-12 ct-u-paddingBottom20">
            <a href="{{ base_url() }}tour" class="btn btn-lg btn-default text-uppercase col-md-12">LIHAT DAFTAR SEMUA PAKET</a>
          </div>
        </div>
      </div>
    </section>
