{% extends _layout %}
{% block content_header %}
    <h1>
        Staff
        <small>detail</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Staff</li>
    </ol>
{% endblock %}
{% block content %}
    <div class="row">
    <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">{{ staffs ? staffs.name : 'Unknown' }}</h3>
                </div>
                <div class="box-body">
                    <table class="table table-bordered">                            
                        <tr>
                            <td colspan="2">
                                <center>
                                {% if staffs and staffs.img is not empty %}
                                    <img src="{{ asset('images/staffs/' ~ staffs.img ,true) }}" style="width:200px">
                                {% else %}
                                    <img src="{{ asset('images/staffs/default.png',true) }}" style="width:200px">
                                {% endif %}
                                </center>
                            </td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ staffs.name }}</td>
                        </tr> 
                        <tr>
                            <th>Position</th>
                            <td>{{ staffs.position }}</td>
                        </tr>  
                        <tr>
                            <th>Description</th>
                            <td>{{ staffs.description }}</td>
                        </tr> 
                        <tr>
                            <th>Socmed</th>
                            <td>
                                <div class="col-md-3">
                                    <a href="{{socmed.0.ig}}" target="blank"><i class="fa  fa-instagram "></i></a>
                                </div>
                                <div class="col-md-3">
                                    <a href="{{socmed.0.fb}}" target="blank"><i class="fa  fa-facebook "></i></a>
                                </div>
                                <div class="col-md-3">
                                    <a href="{{socmed.0.tw}}" target="blank"><i class="fa  fa-twitter "></i></a>
                                </div>
                            </td>
                        </tr>             
                    </table>
                </div>
                <div class="box-footer">
                    <a href="{{ generate_url('admin_staff_index') }}" class="btn btn-warning"><i class="fa fa-chevron-left"></i> Back</a> 
                    <a href="{{ generate_url('admin_staff_form') }}?mode=edit&id={{staffs.id}}" class="btn btn-info" style="margin-left:5px;">Edit</a> 
                </div>
            </div>
        </div>
        <div class="col-md-6"></div>
    </div>
{% endblock %}
{% block bottom_resource %}
    {{parent()}}
    <script>
    </script>
{% endblock %}