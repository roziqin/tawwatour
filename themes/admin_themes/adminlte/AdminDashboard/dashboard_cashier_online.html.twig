<div class="box box-danger">
    <div class="box-header with-border">
        <h3 class="box-title">Cashier Info</h3>
        <div class="box-tools pull-right">
            <span class="label label-danger">{{cashiers|length}} Cashier Open</span>
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i>
            </button>
        </div>
    </div>
    <div class="box-body">
        <div class="direct-chat-messages">
            <ul class="products-list product-list-in-box">
                {% for cashier in cashiers %}
                <li class="item">
                    <div class="product-img">
                    <img src="{{asset('images/noavatar.png')}}" alt="Product Image">
                    </div>
                    <div class="product-info">
                    <a href="javascript:void(0)" class="product-title">
                        {{cashier.user.name}}
                        <span class="label label-success pull-right">Open</span>
                    </a><br>
                    <span>
                            Open Since : {{tanggal_indo(cashier.in_time|date('Y-m-d'))}} {{cashier.in_time|date('H:i')}}<br>
                            Last Login : {{tanggal_indo(cashier.user.last_signin|date('Y-m-d'))}} {{cashier.user.last_signin|date('H:i')}}
                    </span>
                    </div>
                </li>
                {% endfor %}
            </ul>   
        </div>
    </div>
</div>