{% extends _layout %}
{% block content_header %}
    <h1>
        Gallery
        <small>detail</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Gallery</li>
    </ol>
{% endblock %}
{% block content %}
    <div class="row">
    <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">{{ galleries ? galleries.caption : 'Unknown' }}</h3>
                </div>
                <div class="box-body">
                    <table class="table table-bordered">                            
                        <tr>
                            <td colspan="2">
                                <center>
                                {% if galleries and galleries.img is not empty %}
                                    <img src="{{ asset('images/gallery/' ~ galleries.img ,true) }}" style="width:200px">
                                {% else %}
                                    <img src="{{ asset('images/gallery/default.png',true) }}" style="width:200px">
                                {% endif %}
                                </center>
                            </td>
                        </tr>
                        <tr>
                            <th>Caption</th>
                            <td>{{ galleries.caption }}</td>
                        </tr>   
                        <tr>
                            <th>Description</th>
                            <td>{{ galleries.description }}</td>
                        </tr>            
                    </table>
                </div>
                <div class="box-footer">
                    <a href="{{ generate_url('admin_gallery') }}" class="btn btn-warning"><i class="fa fa-chevron-left"></i> Back</a> 
                    <a href="{{ generate_url('admin_gallery_form') }}?mode=edit&id={{galleries.id}}" class="btn btn-info" style="margin-left:5px;">Edit</a> 
                </div>
            </div>
        </div>
        <div class="col-md-6"></div>
    </div>
{% endblock %}
{% block bottom_resource %}
    {{parent()}}
    <script>
    </script>
{% endblock %}