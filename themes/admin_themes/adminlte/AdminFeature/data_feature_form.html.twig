{% extends _layout %}
{% block content_header %}
    <h1>
        Service
        <small>form</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Service</li>
    </ol>
{% endblock %}
{% block content %}
    {{ message is defined and message is not empty ? message : '' }}
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                <div class="box">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="feature_name">Name <span class="text-red">*</span></label>
                            <input type="text" class="form-control alphanumeric" id="feature_name" name="feature_name" placeholder="Enter Feature Name" value="{{ features is defined ? features.name : '' }}" required >
                            <span class="help-block" style="color:red">*Name is required</span>
                        </div>        
                        <div class="form-description">
                            <label for="feature_name">Description</label>
                            <textarea type="text" class="form-control" id="feature_description" name="feature_description" placeholder="Enter Feature Description">{{ features is defined ? features.description : '' }}</textarea>
                        </div>
                        <div class="form-description">
                            <label for="feature_name">Description Summary</label>
                            <input type="text" class="form-control" id="feature_description_summary" name="feature_description_summary" placeholder="Enter Description Summary" value="{{ features is defined ? features.description_summary : '' }}">
                        </div> 
                        <div class="form-group">
                            <label for="feature_image">Image</label>
                            <input type="file" id="feature_image" name="feature_image">
                            <p class="help-block">Type: jpg/png | Max Size: 300kb | Recommended Dimension: 770x450 pixel</p>
                        </div>               
                    </div>
                    <div class="box-footer">
                        <a href="{{ generate_url('admin_data_feature_index') }}" class="btn btn-warning"><i class="fa fa-chevron-left"></i> Back</a>
                        <button type="submit" class="btn btn-success pull-right"><i class="fa fa-save"></i> Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block bottom_resource %}
    {{parent()}}
    <script>
    </script>
{% endblock %}