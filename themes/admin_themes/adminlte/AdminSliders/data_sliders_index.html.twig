{% extends _layout %}
{% block content_header %}
    <h1>
        Sliders
        <small>list of all sliders</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Sliders</li>
    </ol>
{% endblock %}
{% block content %}
    {{ message }}
    <div class="box">
        <div class="box-header">
            <a href="{{ generate_url('admin_sliders_form') }}" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i> New Sliders</a>
        </div>
        <div class="box-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hovered">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Title</th>
                            <th>Subtitle</th>
                            <th>Image</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for slider in sliders %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ slider.title }}</td>
                                <td>{{ slider.subtitle }}</td>
                                <td>
                                    <center>
                                        {% if sliders and slider.img is not empty %}
                                            <img src="{{ asset('img/slides/' ~ slider.img ,true) }}" style="width:50px">
                                        {% else %}
                                            <img src="{{ asset('img/slides/default.png',true) }}" style="width:50px">
                                        {% endif %}
                                    </center>
                                </td>
                                <td>{{ description[loop.index -1] }}</td>
                                <td>
                                    <a href="{{ generate_url('admin_sliders_detail',{id:slider.id}) }}" class="btn btn-sm btn-success">detail</a> 
                                    <a href="{{ generate_url('admin_sliders_form') }}?mode=edit&id={{slider.id}}" class="btn btn-sm btn-warning" style="margin-left:5px;">edit</a> 
                                    <a href="{{ generate_url('admin_sliders_delete',{id:slider.id}) }}" class="btn btn-sm btn-danger btn-confirm" style="margin-left:5px;">delete</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6"><div class="alert alert-danger">No Data</div></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block bottom_resource %}
    {{parent()}}
    <script>
    </script>
{% endblock %}