{% extends _layout %}
{% block content_header %}
    <h1>
        Testimonies
        <small>form</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Testimonies</li>
    </ol>
{% endblock %}
{% block content %}
    {{ message is defined and message is not empty ? message : '' }}
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                <div class="box">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="testimonies_name">Name <span class="text-red">*</span></label>
                            <input type="text" class="form-control alphanumeric" id="testimonies_name" name="testimonies_name" placeholder="Enter Testimony Name" value="{{ testimonies is defined ? testimonies.name : '' }}" required >
                            <span class="help-block" style="color:red">*Name is required</span>
                        </div>    
                        <div class="form-group">
                            <label for="testimonies_job">Job <span class="text-red">*</span></label>
                            <input type="text" class="form-control alphanumeric" id="testimonies_job" name="testimonies_job" placeholder="Enter Testimony Job" value="{{ testimonies is defined ? testimonies.job : '' }}" required >
                            <span class="help-block" style="color:red">*Job is required</span>
                        </div>      
                        <div class="form-description">
                            <label for="testimonies_description">Description</label>
                            <input type="text" class="form-control alphanumeric" id="testimonies_description" name="testimonies_description" placeholder="Enter Testimonytes Name" value="{{ testimonies is defined ? testimonies.description : '' }}">
                        </div> 
                        <div class="form-group">
                            <label for="testimonies_image">Image</label>
                            <input type="file" id="testimonies_image" name="testimonies_image">
                            <p class="help-block">Type: jpg/png | Max Size: 300kb | Recommended Dimension: 270x150 pixel</p>
                        </div>               
                    </div>
                    <div class="box-footer">
                        <a href="{{ generate_url('admin_testimonies_index') }}" class="btn btn-warning"><i class="fa fa-chevron-left"></i> Back</a>
                        <button type="submit" class="btn btn-success pull-right"><i class="fa fa-save"></i> Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block bottom_resource %}
    {{parent()}}
    <script>
    </script>
{% endblock %}