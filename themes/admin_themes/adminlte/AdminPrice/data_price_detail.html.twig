{% extends _layout %}
{% block content_header %}
    <h1>
        Price
        <small>detail</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Price</li>
    </ol>
{% endblock %}
{% block content %}
    <div class="row">
    <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">{{ prices ? prices.name : 'Unknown' }}</h3>
                </div>
                <div class="box-body">
                    <table class="table table-bordered">                            
                        <tr>
                            <td colspan="2">
                                <center>
                                {% if prices and prices.img is not empty %}
                                    <img src="{{ asset('images/price/' ~ prices.img ,true) }}" style="width:200px">
                                {% else %}
                                    <img src="{{ asset('images/price/default.png',true) }}" style="width:200px">
                                {% endif %}
                                </center>
                            </td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ prices.name }}</td>
                        </tr>     
                        <tr>
                            <th>Description</th>
                            <td>{{ prices.description }}</td>
                        </tr>  
                        <tr>
                            <th>Price</th>
                            <td>{{ format_angka(prices.price) }}</td>
                        </tr>            
                    </table>
                </div>
                <div class="box-footer">
                    <a href="{{ generate_url('admin_price') }}" class="btn btn-warning"><i class="fa fa-chevron-left"></i> Back</a> 
                    <a href="{{ generate_url('admin_price_form') }}?mode=edit&id={{prices.id}}" class="btn btn-info" style="margin-left:5px;">Edit</a> 
                </div>
            </div>
        </div>
        <div class="col-md-6"></div>
    </div>
{% endblock %}
{% block bottom_resource %}
    {{parent()}}
    <script>
    </script>
{% endblock %}